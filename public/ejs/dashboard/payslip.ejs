<div class="col-md-10" ng-init="getUserInfo()">
    <fieldset>
        <legend>Payslips</legend>
        <div class="form-group">
            <p><b>Name</b>: {{user.name | uppercase}}</p>
        </div>

        <div class="form-group">
            <p><b>Reg. no</b> : {{user.uid}}</p>
        </div>
        <div class="form-group">
            <p><b>Monthly Salary </b>: Rs. {{user.dailyPay * 30}}</p>

        </div>

        <div class="form-group">
            <p><b>Payable Salary </b>: Rs. {{user.netSalary}}</p>

        </div>

        <div class="form-group">
            <b>Bank Account Number </b>: {{user.accountNumber}}
                <br>

                <div ng-if="message.content">
                    <div class="alert alert-danger" ng-if="message.error"><b>{{message.content}}</b></div>
                    <div class="alert alert-success" ng-if="!message.error">
                        <b>{{message.content}}</b>
                    </div>
                </div>
            </div>
        </div>



        <div class="panel-body">
            <div id="timechart" style="width:100%;height:300px"></div>
        </div>
</div>
